<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions for Docker Ubuntu environment and WebIDE -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    
    <!-- ARM64/AArch64 requirement -->
    <uses-feature
        android:name="android.hardware.cpu.arm64"
        android:required="true" />
    
    <!-- Minimum RAM requirement for Docker Ubuntu -->
    <uses-feature
        android:name="android.hardware.ram.normal"
        android:required="true" />

    <application
        android:name=".WeblabsMobIDEApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.WeblabsMobIDE"
        android:hardwareAccelerated="true"
        android:largeHeap="true"
        android:requestLegacyExternalStorage="true"
        android:preserveLegacyExternalStorage="true"
        tools:targetApi="31">

        <!-- Main Activity - Docker Ubuntu WebIDE -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize|keyboardHidden|screenLayout"
            android:windowSoftInputMode="adjustResize|stateHidden"
            android:theme="@style/Theme.WeblabsMobIDE.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
            <!-- Deep links for shell commands -->
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="weblabs"
                      android:host="mobide" />
            </intent-filter>
        </activity>

        <!-- WebIDE Activity - Docker Ubuntu Interface -->
        <activity
            android:name=".WebIDEActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize|keyboardHidden|screenLayout"
            android:windowSoftInputMode="adjustResize|stateHidden"
            android:theme="@style/Theme.WeblabsMobIDE.NoActionBar" />

        <!-- Alpine Linux Background Service -->
        <service
            android:name="com.spiralgang.weblabs.services.AlpineLinuxService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="dataSync" />

        <!-- Shell Terminal Service -->
        <service
            android:name="com.spiralgang.weblabs.services.ShellTerminalService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="dataSync" />

        <!-- AI Assistant Service -->
        <service
            android:name="com.spiralgang.weblabs.services.AIAssistantService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="dataSync" />

        <!-- File Provider for sharing files between Alpine and Android -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- Backup configuration -->
        <meta-data
            android:name="com.google.android.backup.api_key"
            android:value="your_backup_key_here" />

        <!-- Performance optimizations for ARM64 -->
        <meta-data
            android:name="android.webkit.WebView.EnableSafeBrowsing"
            android:value="true" />
        <meta-data
            android:name="android.webkit.WebView.MetricsOptOut"
            android:value="false" />

    </application>

</manifest>