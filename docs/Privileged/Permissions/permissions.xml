<?xml version="1.0" encoding="utf-8"?>
<!--
  Privileged permission grant list for WebLabs MobIDE when installed on a
  system image. This document complements the advanced signing workflow by
  enumerating the signature|privileged permissions that should be granted to
  the application package so that the IDE stack can operate without runtime
  prompts on managed devices.
-->
<permissions>
    <!-- Privileged grants for the MobIDE system image build -->
    <privapp-permissions package="com.spiralgang.weblabs">
        <!-- Full network access for the IDE, Docker proxies, and AI services -->
        <permission name="android.permission.INTERNET" />
        <permission name="android.permission.ACCESS_NETWORK_STATE" />
        <permission name="android.permission.ACCESS_WIFI_STATE" />

        <!-- Long running workspace containers require wake locks and foreground services -->
        <permission name="android.permission.WAKE_LOCK" />
        <permission name="android.permission.FOREGROUND_SERVICE" />

        <!-- Allow installation and overlay flows that bootstrap tooling images -->
        <permission name="android.permission.REQUEST_INSTALL_PACKAGES" />
        <permission name="android.permission.SYSTEM_ALERT_WINDOW" />

        <!-- Provide full filesystem control for syncing the Ubuntu rootfs -->
        <permission name="android.permission.READ_EXTERNAL_STORAGE" />
        <permission name="android.permission.WRITE_EXTERNAL_STORAGE" />
        <permission name="android.permission.MANAGE_EXTERNAL_STORAGE" />
        <permission name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    </privapp-permissions>
</permissions>
